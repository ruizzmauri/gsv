{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "gsv-channel-whatsapp",
  "main": "src/index.ts",
  // Use latest compatibility date for full Node.js crypto support (ncrypto)
  "compatibility_date": "2025-09-21",
  "compatibility_flags": ["nodejs_compat"],
  "observability": {
    "enabled": true
  },
  // Alias packages to our shims
  "alias": {
    "ws": "./src/ws-shim.ts",
    "axios": "./src/axios-shim.ts"
  },
  "durable_objects": {
    "bindings": [
      {
        "name": "WHATSAPP_ACCOUNT",
        "class_name": "WhatsAppAccount"
      }
    ]
  },
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["WhatsAppAccount"]
    }
  ],
  // Service binding to Gateway for RPC
  "services": [
    {
      "binding": "GATEWAY",
      "service": "gateway",
      "entrypoint": "GatewayEntrypoint"
    }
  ]
}
